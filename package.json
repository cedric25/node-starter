{
  "name": "start-node",
  "version": "0.1.0",
  "description": "Simple starting point to create a Node.js program",
  "main": "server.js",
  "keywords": [
    "nodejs",
    "starter"
  ],
  "author": "Cedric Nicoloso <cedric.nicoloso@gmail.com>",
  "license": "ISC",
  "engines": {
    "node": "8.x",
    "npm": "5.x"
  },
  "scripts": {
    "start": "npm run start:dev",
    "start:dev": "node index | npx bunyan --time local --output short",
    "start:debug": "LOG_LEVEL=debug npm run start:dev",
    "start:prod": "NODE_ENV=production node index",
    "test": "FORCE_COLOR=true mocha | npx bunyan --time local --output short",
    "lint": "eslint . --ext .js"
  },
  "dependencies": {
    "bunyan": "^1.8.12"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.17.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "mocha": "^5.2.0"
  }
}
